[me]
nick1 = MicroBot
nick2 = MicroBot`
nick3 = MicroBot_
ident = ubot
server1 = irc.freenode.net
password = Wahoonie.
priority    = 2
realname    = ubot
controlchan = #microbot

[peer1]
nickmatch = MicroBot2(`|_)?!(n|i)=ubot@no_where
priority = 3

[peer2]
nickmatch = Microbot3(`|_)?!(n|i)=ubot@no_where
priority = 4

[loggers]
keys=root,ubot,ubot.messages

[handlers]
keys=rootlog,botlog,msglog

[formatters]
keys=simple

[logger_root]
level=INFO
handlers=rootlog
qualname=root

[logger_ubot]
level=INFO
handlers=botlog
qualname=ubot
propagate=0

[logger_ubot.messages]
level=INFO
handlers=msglog
qualname=ubot.messages
propagate=0

[handler_rootlog]
class=handlers.RotatingFileHandler
formatter=simple
level=DEBUG
args=('@LOCALSTATEDIR@/ubot/ubot_misc.log','a',10485760,10)

[handler_botlog]
class=handlers.RotatingFileHandler
formatter=simple
level=DEBUG
args=('@LOCALSTATEDIR@/ubot/ubot.log','a',10485760,10)

[handler_msglog]
class=handlers.RotatingFileHandler
formatter=simple
level=DEBUG
args=('@LOCALSTATEDIR@/ubot/ubot_msg.log','a',10485760,10)

[formatter_simple]
format=%(asctime)s %(name)s:%(levelname)s %(message)s

